{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "react-app"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "semi": "off",
    "prettier/prettier": "warn",
    "@typescript-eslint/interface-name-prefix": 0,
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "none",
          "requireLast": false
        },
        "singleline": {
          "delimiter": "comma",
          "requireLast": false
        }
      }
    ]
  }
}
